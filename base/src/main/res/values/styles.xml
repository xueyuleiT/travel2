<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!-- toolbar菜单样式 -->
    <style name="ToolbarMenuTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">#fff</item>
        <item name="colorControlNormal">@color/black_263238</item>
    </style>

    <!-- toolbar菜单样式 -->
    <style name="ToolbarTransParentMenuTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">#00000000</item>
        <item name="colorControlNormal">@color/black_263238</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
    </style>
    <!-- Toolbar parent="TextAppearance.Widget.AppCompat.Toolbar.Title" -->
    <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black_263238</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MyToolBar_title" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textColor">@color/black_263238</item>
        <item name="android:textSize">17sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="MyToolBar_center_title" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black_263238</item>
        <item name="android:textSize">17sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="MyToolBar_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="ThemeDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="AppTheme.Welcome" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>//无标题
        <item name="android:windowActionBar">false</item>//无ActionBar
        <item name="android:windowFullscreen">true</item>//全屏即无通知栏
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#fa7268</item>
        <item name="colorControlActivated">#fa7268</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">@color/blue_3a75f3</item>
    </style>

    <declare-styleable name="RoundImageView">
        <attr name="corner_radius" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_bg_color" format="color" />
        <attr name="round_background" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="pressdown_shade" format="boolean" />
    </declare-styleable>


    <declare-styleable name="PasswordEditText">
        <attr format="boolean" name="bold"/>
    </declare-styleable>

    <declare-styleable name="ImageCoverLayout">
        <attr name="cover_left" format="dimension" />
    </declare-styleable>

    <declare-styleable name="XMarqueeView"><attr format="boolean" name="isSetAnimDuration"/><attr format="boolean" name="isSingleLine"/><attr format="integer" name="marquee_count"/><attr format="integer|reference" name="marquee_interval"/><attr format="integer|reference" name="marquee_animDuration"/><attr format="dimension|reference" name="marquee_textSize"/><attr format="color|reference" name="marquee_textColor"/><attr format="boolean" name="isFlippingLessCount"/></declare-styleable>
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>
    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_r10_bottom_sheet_dialog</item>
    </style>
    <declare-styleable name="TextViewWithoutPadding">
        <attr format="boolean" name="boldText"/>
    </declare-styleable>

    <declare-styleable name="LoadingView">
        <attr name="roundColor" format="color"/>
        <attr name="roundProgressColor" format="color"/>
        <attr name="roundWidth" format="dimension"></attr>
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer"></attr>
        <attr name="textIsDisplayable" format="boolean"></attr>
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>

</resources>