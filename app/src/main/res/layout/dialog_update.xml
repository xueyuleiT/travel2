<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_update"
        android:layout_width="260dp"
        android:layout_height="370dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_r10_cw">

        <LinearLayout
            android:id="@+id/update_zi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="V1.4.3"
                android:textColor="@color/black_263238"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/update_zi"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="更新"
                android:textColor="@color/black_263238"
                android:textSize="13sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp">

                <TextView
                    android:id="@+id/ed_remark"
                    style="?android:attr/textViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:text="11111"
                    android:lineSpacingExtra="5dp"
                    android:lineSpacingMultiplier="1.0"
                    android:textColor="@color/gray_6"
                    android:textSize="14sp" />
            </ScrollView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <!--<TextView-->
            <!--android:id="@+id/tv_cancle"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@drawable/gl_button_bg_gray1"-->
            <!--android:gravity="center"-->
            <!--android:text="以后再说"-->
            <!--android:textColor="@color/white"-->
            <!--android:visibility="gone" />-->

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_r20"
                android:gravity="center"
                android:text="立即更新"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white" />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
