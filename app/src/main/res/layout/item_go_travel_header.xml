<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="出行查询"
                android:textStyle="bold"
                android:textColor="@color/black_263238"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:textColor="@color/black_263238"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/shape_r10_cw"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_car_search"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_public_car"
                    android:id="@+id/iv_car_search"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_below="@+id/iv_car_search"
                    android:layout_marginTop="15dp"
                    android:text="公交查询"
                    android:textColor="@color/black_263238"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_customized"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_special_car"
                    android:id="@+id/iv_special_car_search"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_below="@+id/iv_special_car_search"
                    android:layout_marginTop="15dp"
                    android:text="定制公交"
                    android:textColor="@color/black_263238"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_car_spot"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_car_ztc"
                    android:id="@+id/iv_car_spot"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_below="@+id/iv_car_spot"
                    android:layout_marginTop="15dp"
                    android:text="景区直通车"
                    android:textColor="@color/black_263238"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_function_other"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_car_change"
                    android:id="@+id/iv_other"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_below="@+id/iv_other"
                    android:layout_marginTop="15dp"
                    android:text="换乘查询"
                    android:textColor="@color/black_263238"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </LinearLayout>


        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="12dp"
            android:text="附近公交站点"
            android:textStyle="bold"
            android:textColor="@color/black_263238"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>