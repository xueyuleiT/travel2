<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_heart"
            android:src="@mipmap/icon_heart"
            android:layout_width="15dp"
            android:layout_height="15dp"/>

        <RelativeLayout
            android:layout_toRightOf="@+id/iv_heart"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_bus_name"
                android:textSize="15sp"
                android:text="全州102号"
                android:textStyle="bold"
                android:textColor="@color/black_263238"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_to"
                android:layout_marginTop="15dp"
                android:textColor="@color/gray_9"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="开往火车南站"
                android:layout_below="@+id/tv_bus_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

        <ImageView
            android:layout_toLeftOf="@+id/tv_time"
            android:id="@+id/v_time"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/anim_gif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/green_light"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <include
        android:id="@+id/v_divider"
        layout="@layout/layout_divider"
        android:layout_below="@+id/rl_top"
        android:layout_height="0.5dp"
        android:layout_width="match_parent"/>
</RelativeLayout>