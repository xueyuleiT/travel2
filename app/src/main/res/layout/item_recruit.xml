<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/shape_r10_cw"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black_263238"
            android:textSize="14sp"
            android:text="7:30"
            android:id="@+id/tv_time"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/icon_order_start_time"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:background="@drawable/shape_r5_c_green"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:text="我要报名"
            android:textStyle="bold"
            android:id="@+id/tv_want"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <include layout="@layout/layout_divider"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_start"
            android:text="桂林北站"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="@color/black_263238"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/shape_r5_c_gray9"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/v_trans"
                android:src="@mipmap/icon_trans_sigle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/v_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_trans_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/shape_r2_c_gray"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>

                <View
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/shape_r2_c_gray"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>

                <View
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/shape_r2_c_gray"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/icon_trans_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_end"
            android:text="桂林南站"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="@color/black_263238"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/shape_r5_c_gray9"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <include layout="@layout/layout_divider"/>

    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_left"
            android:text="报名人数:"
            android:textSize="14sp"
            android:textColor="@color/black_263238"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_joined_count"
            android:textSize="14sp"
            android:textColor="@color/green_light"
            android:text="2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_min_user_count"
            android:layout_centerVertical="true"
            android:text="成行人数:10"
            android:textSize="14sp"
            android:textColor="@color/black_263238"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>
</LinearLayout>