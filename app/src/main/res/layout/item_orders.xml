<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_r10_cw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/v_type"
                android:src="@mipmap/icon_plus"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tv_type"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:text="定制公交"
                android:textColor="@color/black_263238"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:gravity="right"
                android:textColor="@color/gray_9"
                android:textSize="12sp"
                android:layout_weight="1"
                android:text="2020-09-21 10:20"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_trans"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:textSize="16sp"
            android:text="蘑菇盘山----定富大厦"
            android:textColor="@color/black_263238"
            android:background="@drawable/shape_r10_cf3f5f6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_no"
                android:textColor="@color/black_263238"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="订单号:2121218"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_status"
                android:textColor="@color/red_ff3737"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/v_arrow"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/icon_arrow_right_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>