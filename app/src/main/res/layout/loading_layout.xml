<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_r5_cw"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_top_r5_c_green"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="下载"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true">

        <com.jtcxw.glcxw.base.views.LoadingView
            android:id="@+id/loading_view"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_centerInParent="true"
            android_custom:roundColor="@color/c_efefef"
            android_custom:roundProgressColor="@color/green_light"
            android_custom:roundWidth="10dip"
            android_custom:textColor="@color/green_light"
            android_custom:textIsDisplayable="true"
            android_custom:textSize="18sp" />
    </RelativeLayout>


</LinearLayout>